

REPORT  ZSCOE_REPORT3.

DATA V_NETWR TYPE VBAK-NETWR.
SELECT-OPTIONS SO_NETWR FOR V_NETWR DEFAULT 1000 TO 1500.

TYPES:BEGIN OF TY_SALES,
      VBELN TYPE VBAK-VBELN,
      ERDAT TYPE VBAK-ERDAT,
      ERZET TYPE VBAK-ERZET,
      NETWR TYPE VBAK-NETWR,
  END OF TY_SALES.

  DATA: T_SALES TYPE TABLE OF TY_sALES,
        WA_SALES TYPE TY_SALES.

  START-OF-SELECTION.
  PERFORM GETSALESORDER.
  IF T_SALES IS NOT INITIAL.
    DESCRIBE TABLE T_SALES.
    WRITE : /'NO OF SALES ORDER IN THE GIVEN VALUE RANGE', SY-TFILL.

PERFORM DISPLAYSALESORDER.
ELSE.
 MESSAGE 'NO SALES ORDER IN THE GIVEN NET VALUE RANGE' TYPE ' I'.
ENDIF.


  FORM GETSALESORDER.
    SELECT VBELN ERDAT ERZET NETWR
      FROM VBAK
      INTO TABLE T_SALES
      WHERE NETWR IN SO_NETWR. " USE IN OPERATOR FOR MULTIPLE SELECT OPTIONS

    ENDFORM.

    FORM DISPLAYSALESORDER.
      LOOP AT T_SALES INTO WA_SALES.
        WRITE: / WA_SALES-VBELN,
                WA_SALES-ERDAT,
                WA_sALES-ERZET,
                WA_sALES-NETWR.
        ENDLOOP.

      ENDFORM.
