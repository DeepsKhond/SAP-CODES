
REPORT ZCLASSICAL_PRGREPORT.

TABLES : ZDK_SCOE_EMP1.

TYPES : BEGIN OF ST_EMP,
        EMPEID TYPE ZDK_SCOE_EMP1-EMPEID,
        EMPENAME TYPE ZDK_SCOE_EMP1-EMPENAME,
        EMPESALARY TYPE ZDK_SCOE_EMP1-EMPESALARY,
        EMPEDESIGNATION TYPE ZDK_SCOE_EMP1-EMPEDESIGNATION,
       END OF ST_EMP.

DATA : INTERNAL_TABLE TYPE TABLE OF ST_EMP,
       WORK_AREA TYPE ST_EMP.


       SELECTION-SCREEN BEGIN OF BLOCK b1 WITH FRAME TITLE TEXT-001.

            SELECT-OPTIONS : SID FOR ZDK_SCOE_EMP1-EMPEID.
            PARAMETERS: PNAME TYPE ZDK_SCOE_EMP1-EMPENAME.

       SELECTION-SCREEN END OF BLOCK b1.

       START-OF-SELECTION.

       SELECT EMPEID
              EMPENAME
              EMPESALARY
              EMPEDESIGNATION
       FROM ZDK_SCOE_EMP1
        INTO CORRESPONDING FIELDS OF TABLE INTERNAL_TABLE
        WHERE EMPEID IN SID  AND EMPENAME = PNAME.

         WRITE : 'EMP ID',
                 30 'EMP NAME',
                  60 'EMP SALARY',
                  90 'EMP DESIGNATION'.

         ULINE.

         LOOP AT INTERNAL_TABLE INTO WORK_AREA.

           WRITE : / WORK_AREA-EMPEID,
          30 WORK_AREA-EMPENAME,
          60 WORK_AREA-EMPESALARY,
          90 WORK_AREA-EMPEDESIGNATION.
         ENDLOOP.
